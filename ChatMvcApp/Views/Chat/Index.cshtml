@model ChatMvcApp.ViewModels.ChatViewModel

@{
    ViewData["Title"] = "Chat Room";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4>Chat Room</h4>
                    <div>
                        <span class="badge badge-primary">Welcome, @Model.CurrentUser.FirstName!</span>
                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-outline-danger btn-sm ml-2">Logout</button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <div id="chat-messages" style="height: 400px; overflow-y: auto; border: 1px solid #ddd; padding: 15px; margin-bottom: 15px;">
                        @foreach (var message in Model.Messages)
                        {
                            <div class="message @(message.SenderId == Model.CurrentUser.Id ? "text-right" : "") mb-3">
                                <div class="d-flex @(message.SenderId == Model.CurrentUser.Id ? "justify-content-end" : "")">
                                    <div class="message-bubble @(message.SenderId == Model.CurrentUser.Id ? "bg-primary text-white" : "bg-light") p-3 rounded" style="max-width: 70%;">
                                        <div class="message-header small">
                                            <strong>@message.Sender.FirstName @message.Sender.LastName</strong>
                                            <span class="text-muted">@message.Timestamp.ToLocalTime().ToString("MM/dd/yyyy hh:mm tt")</span>
                                        </div>
                                        <div class="message-body mt-1">
                                            @message.Message
                                        </div>
                                        @if (message.SenderId == Model.CurrentUser.Id)
                                        {
                                            <div class="message-actions mt-1">
                                                <form asp-action="DeleteMessage" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@message.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this message?')">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <form asp-action="SendMessage" method="post" class="mt-3">
                        <div class="input-group">
                            <input type="text" name="message" class="form-control" placeholder="Type your message..." required />
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat messages
        window.onload = function() {
            var chatMessages = document.getElementById('chat-messages');
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }
    </script>
}